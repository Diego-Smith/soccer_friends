# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# Home page
GET     /                           it.sf.controllers.Application.index
POST	/login						it.sf.controllers.Application.login

#User
GET		/user/insert				it.sf.controllers.Application.insert
GET		/user/hello/:username/:password it.sf.controllers.Application.helloUser(username, password)

#Category
GET		/category/insert/:name			it.sf.controllers.CategoryController.testAddCategory(name)
GET		/category/list				it.sf.controllers.CategoryController.listCategories


# Users
#GET		/users/add					controllers.Users.add
#POST	/users						controllers.Users.save


# Map static resources from the /public folder to the /assets URL path
GET     /assets/img/glyphicons-halflings-white.png      controllers.Assets.at(path="/public", file="/images/glyphicons-halflings-white.png")
GET     /assets/img/glyphicons-halflings.png            controllers.Assets.at(path="/public", file="/images/glyphicons-halflings.png")
GET     /assets/*file               controllers.Assets.at(path="/public", file)

